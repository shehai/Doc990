<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp"
            android:background="@drawable/ble"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="342dp"
                android:layout_marginBottom="213dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_white" />

            <ImageView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="true"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="78dp"
                android:src="@drawable/prof_user" />

            <TextView
                android:id="@+id/name_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="192dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/baloo"
                android:text="Shehani Fernando"
                android:textSize="35sp" />

        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <LinearLayout
                    android:id="@+id/linear_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"

                    >

                    <Button
                        android:id="@+id/btn_forgotpwd"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="#00000000"
                        android:elevation="0dp"
                        android:text="Change password?"
                        android:textColor="#C1B6B6" />

                    <TextView
                        android:id="@+id/phn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_edit_shape"

                        android:drawablePadding="16dp"
                       android:text="PHN -    09909490246"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/text_edit_shape"

                        >

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:padding="16dp"/>


                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="50dp"
                            android:textSize="18sp" />



                    </LinearLayout>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_edit_shape"
                        android:drawableStart="@drawable/ic_baseline_account_circle"
                        android:drawablePadding="16dp"
                        android:hint="Name"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"
                        />

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/radio_pirates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIC"
                            android:onClick="onRadioButtonClicked"
                            />
                        <RadioButton android:id="@+id/radio_ninjas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:text="Passport"
                            android:onClick="onRadioButtonClicked"

                            />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/nic_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorLink="@android:color/background_dark" />

                    <EditText
                        android:id="@+id/pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_edit_shape"
                        android:drawableStart="@drawable/ic_baseline_local_phone"
                        android:drawablePadding="16dp"
                        android:hint="Mobile No.*"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"

                        />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_edit_shape"
                        android:drawableStart="@drawable/ic_baseline_email"
                        android:drawablePadding="16dp"
                        android:hint="Email"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/text_edit_shape"

                        >


                        <TextView
                            android:id="@+id/usernam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            android:text="Country"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/spinne"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:textSize="18sp" />



                    </LinearLayout>


                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_edit_shape"
                        android:drawableStart="@drawable/ic_baseline_location"
                        android:drawablePadding="16dp"
                        android:hint="Address"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_edit_shape"
                        android:drawableStart="@drawable/ic_baseline_calendar_today"
                        android:drawablePadding="16dp"
                        android:hint="Date of Birth"
                        android:padding="16dp"
                        android:layout_marginTop="20dp"/>

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Gender"

                            />

                        <RadioButton android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:text="Male"
                            android:onClick="onGenderRadioButtonClicked"
                            />
                        <RadioButton android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:text="Female"
                            android:onClick="onGenderRadioButtonClicked"

                            />
                    </RadioGroup>


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Update"
                        android:background="@drawable/round_button"
                        android:textColor="@color/white"



                        />




                </LinearLayout>

            </LinearLayout>






    </LinearLayout>




</ScrollView>